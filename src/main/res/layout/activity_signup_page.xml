<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup_page">

    <Button
        android:id="@+id/btnloginstead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login instead"
        app:layout_constraintTop_toBottomOf="@+id/btnsignup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="560dp" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:text="lastname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="217dp" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up page"
        android:textSize="20dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="86dp" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="firstname"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/lastname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/malecheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="male"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="328dp" />

    <CheckBox
        android:id="@+id/femalecheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="female"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gender"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="289dp" />

    <Button
        android:id="@+id/btndepertment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="department"
        android:background="@color/cardview_dark_background"
        android:textStyle="bold"
        android:textColorHint="#151515"
        android:textColorLink="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/malecheckBox"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="417dp" />

    <Button
        android:id="@+id/btnsignup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"
        app:layout_constraintTop_toBottomOf="@+id/btndepertment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="482dp" />

</androidx.constraintlayout.widget.ConstraintLayout>